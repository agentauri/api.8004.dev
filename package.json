{
  "name": "8004-backend",
  "version": "1.0.0",
  "description": "Backend service for 8004.dev - Unified REST API for ERC-8004 agent explorer",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "tsx scripts/e2e-tests/run-tests.ts",
    "test:e2e:local": "tsx scripts/e2e-tests/run-tests.ts --local",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:migrate": "wrangler d1 execute 8004-backend-db --file=./migrations/0001_init.sql",
    "db:migrate:local": "wrangler d1 execute 8004-backend-db --local --file=./migrations/0001_init.sql",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "erc-8004",
    "agents",
    "cloudflare-workers",
    "hono",
    "oasf"
  ],
  "author": "Agent0 Lab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agent0lab/8004-backend.git"
  },
  "bugs": {
    "url": "https://github.com/agent0lab/8004-backend/issues"
  },
  "homepage": "https://github.com/agent0lab/8004-backend#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "agent0-sdk": "^0.31.0",
    "hono": "^4.11.3",
    "viem": "^2.43.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@cloudflare/workers-types": "^4.20260103.0",
    "@vitest/coverage-istanbul": "2.1.9",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv": "^17.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitepress": "^1.6.4",
    "vitest": "^2.1.8",
    "wrangler": "^4.54.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.1"
}
